@model BankTransations.Models.Transaction


<style>
    .font{
        font-family:'Arial Rounded MT';
    }
</style>

<div class="container">
    <div class="col-md-12 table">
        <div>
            <input type="hidden" id="hiddenTransactionId" value="@Model.TransactionId" />
            <h2 class="alert alert-info text-center font">
                Transaction Details
            </h2>
        </div>
        <div style="font-family:'Times New Roman'">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.AccountNumber)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.AccountNumber)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.BankName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.BankName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.BeneficiaryName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.BeneficiaryName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.SWIFTCode)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.SWIFTCode)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Amount)
                </dt>
                <dd class="col-sm-10">
                    <span id="reamaining-amount">@Html.DisplayFor(model => model.Amount)</span>
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Date)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Date)
                </dd>
            </dl>
        </div>
        <div>
            <div class="alert alert-success text-center font">
                <h3>Withdraw Amount</h3>
            </div>
            <div>
                <h5 style="font-family:'Times New Roman'">Enter the amount you want to withdraw from this account!</h5>
            </div>
        </div>

        <form id="with-draw" asp-action="WithDraw">
            <div>
                <div class="col">
                    <input id="txtAmount" type="text" class="form-control" placeholder="Enter amount" />
                </div>
                <div class="col mt-2">
                    <input type="button" value="Save" id="submitWithDraw" onclick="withDraw()" class="btn btn-group btn-primary" />
                </div>
            </div>
        </form>
    </div>

</div>

<div id="withdraw">
    @await Html.PartialAsync("WithDraw",Model)
</div>



