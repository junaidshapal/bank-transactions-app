@page
@model LoginModel


<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Login Page</title>
</head>
<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        /*background-image: url('https://images.pexels.com/photos/112460/pexels-photo-112460.jpeg?cs=srgb&dl=pexels-mike-bird-photography-112460.jpg&fm=jpg');*/
        background-image: url("/Images/log.jpg");
        background-repeat: no-repeat;
        background-size: cover;
        background-position: center center;
        font-family: Arial, sans-serif;
    }

    .container {
        width: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    form {
        width: 600px;
        background-color: #fff;
        padding: 45px;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
        margin-top: 40px;
    }

    h2 {
        text-align: center;
        font-size: 32px;
        margin-bottom: 30px;
    }

    .input-field {
        margin-bottom: 20px;
    }

    input[type="text"],
    input[type="password"] {
        width: 100%;
        padding: 10px;
        border-radius: 5px;
        border: none;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
    }

    button[type="submit"] {
        width: 100%;
        padding: 10px;
        border-radius: 5px;
        border: none;
        background-color: #2196f3;
        color: #fff;
        font-size: 18px;
        cursor: pointer;
        transition: all 0.2s ease-in-out;
    }

        button[type="submit"]:hover {
            background-color: #0d8cf0;
        }


    footer {
        visibility: collapse;
    }
</style>
<body>
    <div class="container">
        <form id="account" method="post" style="margin-top:120px">
            <h2 class="alert alert-primary" style="font-family:cursive">Login</h2>
            <div class="input-field">
                <input asp-for="Input.Email" type="text" placeholder="*Username">
            </div>
            <div class="input-field">
                <input asp-for="Input.Password" type="password" placeholder="*Password">
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label asp-for="Input.RememberMe">
                        <input asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
            </div>
            <button class="btn btn-primary" type="submit">Login</button>
        </form>
    </div>
</body>
</html>

